{% extends "base.html.twig" %}

{% block title %}
	{% if not entity.id %}
		Create article
	{% else %}
		Update article #{{ entity.id }}
	{% endif %}
{% endblock %}

{% block stylesheets %}
	<link href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css" rel="stylesheet">
	<link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
	<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>
	<script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>
	<script type="text/javascript" defer>
		var quill = new Quill("#article-editor", {
			"theme" : "snow",
			"modules" : {
				"syntax" : true,
				"toolbar" : [
					[{ 'header': [3, 4, false] }, { 'font': [] }],
					['bold', 'italic', 'underline'],
					[{ 'list': 'ordered'}, { 'list': 'bullet' }, { 'align': [] }],
					[ 'link', 'image', 'video' ],
					['blockquote', 'code-block'],
					['clean']
				]
			}
		});

		// set height
		jQuery("#article-editor").height(window.innerHeight * .6)
	</script>
{% endblock %}

{% set tags = "123" %}

{% block content %}
	<div class="d-flex justify-content-center">
		<div class="col-10">
			<h4>Article edition</h4>
			<form action="/write/{{ entity.id | number_format }}" method="POST">
				<div class="form-group">
					<input
						type="text"
						id="article-title"
						class="form-control"
						name="title"
						value="{{ entity.title }}"
						placeholder="Title"
						required
						/>
				</div>
				<div class="form-group">
					<select
						id="article-category"
						class="form-control"
						name="category"
						required
						size>
							<option disabled selected hidden>Category</option>
							{% for category in categories %}
								<option value="{{ category.id }}">
									{{ category.name }}
								</option>
							{% endfor %}
					</select>
				</div>
				<div id="article-editor">
				</div>
				<div class="form-group">
					<input
						type="text"
						id="article-tags"
						class="form-control"
						name="tags"
						value="{{ entity.tags }}"
						placeholder="Tags separated by comma"
						required
						/>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
